<UserControl x:Class="Key2Joy.Plugin.HelloWorld.Mapping.GetHelloWorldActionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Key2Joy.Plugin.HelloWorld.Mapping"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="txtName" TextChanged="txtName_TextChanged" />
        <Button x:Name="btnHelloWorld" Click="btnHelloWorld_Click">Hello...</Button>
    </StackPanel>
</UserControl>
